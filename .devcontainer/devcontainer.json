{
  "name": "xprotojson",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "postCreateCommand": "bash -lc 'sudo apt-get update && sudo apt-get install -y redis-server && bash .devcontainer/post_create.sh'",
  "postStartCommand": "bash -lc 'pgrep redis-server >/dev/null || (redis-server --daemonize yes && sleep 1 && redis-cli ping || true)'",
  "forwardPorts": [8000, 6379],
  "portsAttributes": {
    "8000": {
      "label": "FastAPI",
      "onAutoForward": "notify"
    },
    "6379": {
      "label": "Redis",
      "onAutoForward": "notify"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "charliermarsh.ruff"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/workspaces/xprotojson/.venv/bin/python",
        "python.analysis.typeCheckingMode": "basic",
        "python.terminal.activateEnvironment": true
      }
    }
  }
}


